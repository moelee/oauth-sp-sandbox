<h1>Log In</h1>

<% form_tag(session_url) do %>
  <p>
    <label for="login">Username:</label>
    <%= text_field_tag "login" %>
  </p>

  <p>
    <label for="password">Password:</label>
    <%= password_field_tag %>
  </p>

  <p>
    ...or use:
  </p>

  <p>
    <label for="openid_identifier">OpenID:</label>
    <%= text_field_tag "openid_url" %>
  </p>

  <p>
    <%= submit_tag 'Sign in'%>
  </p>
<% end %>
